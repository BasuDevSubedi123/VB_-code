Public Class RectangularArea
    'Basu dev subedi
    'display the area of the rectuangle 
    ' 10/23 
    Private Sub displayResult(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles btnCalculate.Click
        Dim height, length, area As Single
        Length = Val(Me.txtLeanth.Text)
        height = Val(Me.txtHight.Text)
        area = length * height
        Me.lblArea.Text = area
    End Sub


    Private Sub clearAreaWhileChang(ByVal sender As Object, ByVal e As System.EventArgs) Handles txtLeanth.TextChanged
        Me.lblArea.Text = ""
    End Sub

    Private Sub clearAreaWhileChanging(ByVal sender As Object, ByVal e As System.EventArgs) Handles txtHight.TextChanged
        Me.lblArea.Text = ""
    End Sub
End Class
